[
  {
    "name": "theme_info",
    "theme_name": "Slate",
    "theme_version": "1.0",
    "theme_author": "Black & Black Creative",
    "theme_documentation_url": "http://blackandblackcreative.com",
    "theme_support_url": "http://blackandblackcreative.com"
  },

  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "minimum 32 x 32"
      }
    ]
  },

  {
    "name": "Top Banner",
    "settings": [
      {
        "type": "checkbox",
        "id": "top_banner_enable",
        "label": "Enable",
        "default": true
      },
      {
        "type": "text",
        "id": "top_banner_desktop_text",
        "label": "Desktop Top Banner Text",
        "default": "Desktop Top Banner"
      },
      {
        "type": "text",
        "id": "top_banner_mobile_text",
        "label": "Mobile Top Banner Text",
        "default": "Mobile Top Banner"
      },
      {
        "type": "color",
        "id": "top_banner_text_color",
        "label": "Top Banner Text Color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "top_banner_bkg_color",
        "label": "Top Banner Background Color",
        "default": "#000000"
      }
    ]
  },

  {
    "name": "Navbar",
    "settings": [


      {
          "type": "select",
          "id": "navbar_style_class",
          "options": [
              { "value": "navbar-black-txt-transparent-bkg", "label": "Black Text, Transparent Background"},
              { "value": "navbar-white-txt-transparent-bkg", "label": "White Text, Transparent Background"},

              { "value": "navbar-black-txt-semi-transparent-bkg", "label": "Black Text, Semi Transparent Background"},
              { "value": "navbar-white-txt-semi-transparent-bkg", "label": "White Text, Semi Transparent Background"},

              { "value": "navbar-black-txt-white-bkg", "label": "Black Text, White Background"},
              { "value": "navbar-white-txt-black-bkg", "label": "White Text, Black Background"}
          ],
          "label": "Navbar Style",
          "default": "navbar-black-txt-transparent-bkg"
      }

    ]
  },


  {
    "name": "Email Subscribe Popup",
    "settings": [
      {
        "type": "text",
        "id": "subscribe-pop-title",
        "label": "Title",
        "default": "Email Subscribe Popup Title"
      },
      {
        "type": "textarea",
        "id": "subscribe-pop-text",
        "label": "Text",
        "default": "Email Subscribe Popup Text"
      }

    ]
  },


  {
    "name": "Size Guide",
    "settings": [
      {
        "type": "image_picker",
        "id": "size_guide",
        "label": "Size Guide"
      }
    ]
  },

  {
    "name": "Collection",
    "settings": [

      {
        "type": "checkbox",
        "id": "hide_sold_out_products",
        "label": "Hide Sold Out Products",
        "default": false
      }

    ]
  },



  {
    "name": "Pagination",
    "settings": [


      {
       "type": "radio",
       "id": "pagination_style_class",
       "options": [
          { "value": "pagination-style-btn", "label": "Load More Button"},
          { "value": "pagination-style-scroll", "label": "Infinite Scroll"}
       ],
       "label": "Pagination Style",
       "default":  "pagination-style-btn"
      },


      {
        "type": "number",
        "id": "product_pagination_limit",
        "label": "Product Pagination Limit",
        "info": "Shopify's maximum is 50",
        "default": 8
      },
      {
        "type": "number",
        "id": "article_pagination_limit",
        "label": "Article Pagination Limit",
        "info": "Shopify's maximum is 50",
        "default": 8
      }

    ]
  }

  

  
]
