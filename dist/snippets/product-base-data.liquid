{% comment %}
    Sale
{% endcomment %}
{% assign is_sale = false %}
{% if product.price < product.compare_at_price %}
    {% assign is_sale = true %}
{% endif %}


{% capture product_price %}

{% if is_sale %}

    <del class="product-price  product-price-compare-at">
        {{ product.compare_at_price | money | remove: ".00" }}
    </del>

    <ins class="product-price  product-price-on-sale">
        {{ product.price | money | remove: ".00" }}
    </ins>

{% else %}

 	<span class="product-price">{% if product.price_varies %}From {% endif %}{{ product.price | money | remove: ".00" }}</span>

{% endif %}

{% endcapture %}




{% comment %}
    "Color" Option
{% endcomment %}

{% assign color_option_name = 'color' %}
{% assign color_option_position = 1 %}
{% assign color_swatch_name = 'swatch' %}


{% comment %}
    Swatch & Color Featured Image
{% endcomment %}
{% assign swatch_src_count  = 0 %}
{% assign swatch_srcs = "" %}


{% for image in product.images %}

    {% assign alt_handle = image.alt | downcase %}

    {% if alt_handle == 'swatch' %}
    
        {% assign swatch_src_count = swatch_src_count | plus: 1 %}

        {% capture swatch_srcs %}{{ swatch_srcs }}{% unless swatch_srcs == blank %},{% endunless %}{{ image.src | img_url: '25x', format: 'pjpg' }}{% endcapture %}

    {% endif %}

{% endfor %}


{% assign swatch_src_array = swatch_srcs | split: "," %}




{% comment %}
    Default Color
{% endcomment %}

{% assign default_color_option_value = "" %}		

{% for option in product.options_with_values %}
	{% assign option_name_handle = option.name | handle %}
	{% if option_name_handle == color_option_name %}
		{% assign default_color_option_value = option.selected_value %}
		{% break %}
	{% endif %}		
{% endfor %}











