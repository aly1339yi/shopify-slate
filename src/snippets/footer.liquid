<footer class="footer">

	<div class="footer-subscribe">
		
		<div class="footer-subscribe-title">{{ 'footer.subscribe_title' | t }}</div>

		{% include 'subscribe-form', namespace: 'footer' %}

	</div>


	<ul class="footer-nav-list">

    {% for link in linklists.footer.links %}

    	<li class="">
    	<a href="{{ link.url }}" class="footer-nav-pillar display-block"><span>{{ link.title }}</span></a>
    	</li>

    {% endfor %}

	</ul>


	{% include 'social-list', namespace: 'footer', type: 'view' %}



	<div>&copy;{{ 'now' | date: "%Y" }}</div>

</footer>
