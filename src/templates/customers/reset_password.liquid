<div class="customer-form-container container">


    <h1 class="customer-title">{{ 'customer.reset_password.title' | t }}</h1>

    <div class="customer-notice">{{ 'customer.reset_password.subtext' | t: email: email }}</div>


    {% form 'reset_customer_password' %}

        {% if form.errors %}
        <div class="form-feedback form-error">{{ form.errors | default_errors }}</div>
        {% endif %}

        <div class="form-field">
        <input type="password"
            name="customer[password]"
            id="ResetPassword">
        <label for="ResetPassword">
            {{ 'customer.reset_password.password' | t }}
        </label>
        </div>

        <div class="form-field">
        <input type="password"
            name="customer[password_confirmation]"
            id="PasswordConfirmation">
        <label for="PasswordConfirmation">
            {{ 'customer.reset_password.password_confirm' | t }}
        </label>
        </div>


        <div class="form-field form-field-no-border">
        <button type="submit" class="btn btn-solid">{{ 'customer.reset_password.submit' | t }}</button>
        </div>

    {% endform %}




</div>

