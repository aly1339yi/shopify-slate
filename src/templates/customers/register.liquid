<div class="customer-form-container container">
	
	<h1 class="customer-title">{{ 'customer.register.title' | t }}</h1>

	{% form 'create_customer' %}

    {% if form.errors %}
    <div class="form-feedback form-error">{{ form.errors | default_errors }}</div>
    {% endif %}

	<div class="form-field">
	<input type="text"
	name="customer[first_name]"
	id="FirstName"
	{% if form.first_name %}value="{{ form.first_name }}"{% endif %}
	required
	>
	<label for="FirstName">
	{{ 'customer.register.first_name' | t }}
	</label>
	</div>

	<div class="form-field">
	<input type="text"
	name="customer[last_name]"
	id="LastName"
	{% if form.last_name %}value="{{ form.last_name }}"{% endif %}
	required
	>
	<label for="LastName">
	{{ 'customer.register.last_name' | t }}
	</label>
	</div>


	<div class="form-field">
	<input type="text"
	name="customer[email]"
	id="Email"
	value="{% if form.email %}{{ form.email }}{% endif %}"
	spellcheck="false"
	autocomplete="off"
	autocapitalize="off"
	required
	>
	<label for="Email">
	{{ 'customer.register.email' | t }}
	</label>
	</div>

	<div class="form-field">
	<input type="password"
	name="customer[password]"
	id="CreatePassword"
	required
	>
	<label for="CreatePassword">
	{{ 'customer.register.password' | t }}
	</label>
	</div>

	<div class="form-field form-field-no-border form-field-label-inline checkbox-style">
		<input type="hidden" name="customer[accepts_marketing]" value="" />
		<input type="checkbox" name="customer[accepts_marketing]" checked="checked" id="AcceptsMarketing"/>
		<label for="AcceptsMarketing"></label>
		<span>{{ 'customer.register.subscribe' | t }}</span>
	</div>



	<div class="form-field form-field-no-border">

	<button type="submit" class="btn btn-solid">{{ 'customer.register.submit' | t }}</button>

	</div>

	{% endform %}













</div>