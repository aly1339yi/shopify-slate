/* =========================================================================
   #VARIABLES
   ========================================================================= */


$palette-purple: #5c6ac4;

$palette-black: #000000;

$palette-white: #ffffff;



$color: (

    'primary' $palette-purple,


    'bullet' transparent,

    'bullet-selected' $palette-black,

    null

);


$font-size: (

    'normal' 1.4rem,

    null
);

$breakpoint: (

    'small' 768px,

    'medium' 992px,

    'large' 1200px,

    'nav' 768px,

    null

);



$z-index: (

    'navbar' 100,

    'fullscreen-overlay' 200,

    'mini-cart' 300,

    null


);




$navbar-banner-height: (

    'desktop' 20px,

    'mobile' 18px,

    null

);

$navbar-nav-height: (

    'desktop' 80px,

    'desktop-condensed' 40px,

    'mobile' 50px,

    null

);



